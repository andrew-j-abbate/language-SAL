'scopeName': 'source'
'name': 'Symbolic Analysis Laboratory'
'fileTypes': ['sal']

patterns: [
  {
    include: '#types'
  }
  {
    include: '#characters'
  }
  {
    include: '#tokens'
  }
  {
    include: '#comments'
  }
  {
    include: '#delim'
  }
  {
    include: '#varscopes'
  }
  {
    include: '#constructs'
  }
  {
    include: '#temporal'
  }
]

repository:
  types:
    patterns: [
      {
      match: '([a-zA-Z_]+\\w*)(\\s*:\\s*)'
      captures:
          1:
            name: 'type.name'
          2:
            name: 'type.colon'
      }
    ]
  characters:
    patterns: [
      {
        match: "(\\=|\\[|\\]|\\{|\\}|\\||\\-|\\+|\\/|\\=\\>|\\<\\=\\>|\\*|\\,|\\.\\.|\\(|\\)|\\[\\#|\\#\\]|\\(\\#|\\#\\)|\\:\\=|\\-\\-\\>|\\/\\=|\\>\\=|\\<\\=|\\<|\\>|\\.|\\?|\\!|\\;)"
        name: 'characters.reserved'
      }
    ]
  tokens:
    patterns: [
      {
        match: '\\b(AND|and|ARRAY|array|BOOLEAN|boolean|bool|BEGIN|begin|ELSE|DIV|div|else|ELSIF|elsif|ENDIF|endif|EXISTS|exists|FALSE|false|FORALL|forall|IF|if|IMPLIES|implies|IN|in|INTEGER|integer|LET|let|NATURAL|natural|nat|NOT|not|NZREAL|nzreal|NZINTEGER|nzinteger|OF|of|OR|or|TYPE|type|THEN|then|TRUE|true|RENAME|REAL|real|rename|WITH|with|XOR|xor)\\b'
        name : 'token.reserved'
      }
        match: "(\\b[a-zA-Z_]+\\w*\\')"
        name : 'token.nextstate'
    ]
  delim:
    patterns: [
      {
          match: '\\b(END|end)\\b'
          name : 'delim'
      }
    ]

  constructs:
    patterns: [
      {
          match: '(\\s*(INITIALIZATION|initialzation|DEFINITION|definition|TRANSITION|transition|CONTEXT|context|MODULE|module|THEOREM|theorem|CLAIM|claim|DATATYPE|datatype|LEMMA|lemma|OBLIGATION|obligation)\\s*)'
          name : 'construct.declaration'
      }
    ]

  varscopes:
    patterns: [
      {
          match: '(INPUT\\s+|input\\s+)(\\w+\\s*|(\\s*\\w+\\s*,\\s*\\w+)+)(\\s*:\\s*)'
          captures:
            1:
              name: 'INPUT.inputvar.varscope'
            2:
              name: 'name.inputvar.varscope'
            3:
              name: 'colon.inputvar.varscope'
          name : 'inputvar.varscope'
      },
      {
          match: '(OUTPUT\\s+|output\\s+|LOCAL\\s+|local\\s+|GLOBAL\\s+|global\\s+)(\\s*\\w+\\s*|(\\s*\\w+\\s*,\\s*\\w+)+)(\\s*:\\s*)'
          captures:
            1:
              name: 'OUTPUT.outputvar.varscope'
            2:
              name: 'name.outputvar.varscope'
            3:
              name: 'colon.outputvar.varscope'
          name : 'outputvar.varscope'
      }
    ]
  temporal:
    patterns: [
      {
        match: '\\b(G|F|E|X|A|U|R)\\b'
        name: 'temporalLogic.operators'
      }
    ]
  comments:
    patterns: [
      {
        begin: '%'
        end  : '\\n'
        name : 'comment.line'
      }
    ]
